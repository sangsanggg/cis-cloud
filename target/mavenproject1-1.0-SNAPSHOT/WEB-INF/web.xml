<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>FTPUploadServlet</servlet-name>
        <servlet-class>FTPUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DockerServlet</servlet-name>
        <servlet-class>DockerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>stopContainer</servlet-name>
        <servlet-class>stopContainer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteContainer</servlet-name>
        <servlet-class>deleteContainer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FTPUploadServlet</servlet-name>
        <url-pattern>/FTPUploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DockerServlet</servlet-name>
        <url-pattern>/DockerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>stopContainer</servlet-name>
        <url-pattern>/stopContainer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteContainer</servlet-name>
        <url-pattern>/deleteContainer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
